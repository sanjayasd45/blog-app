<% layout('/layouts/boilerplate') -%>
    <section class="mt-3 d-flex  offset-1 flex-wrap" >
        <% for(let i of postData) {  %>
            <div class="card m-2" style="width: 18rem; ">
                <img src="<%= i.img  %>" class="card-img-top" alt="img" style="height: 18rem; " >
                <div class="card-body">
                    <h5 class="card-title"><%= i.title %></h5>
                    <p class="card-text small" ><%= i.content.substring(0,95)   %>...<a href="/post/<%= i._id  %>" class="">view more</a></p>   
                    <div class="">
                        <span>@<%= i.author  %></span>
                        <samp><%= JSON.stringify(i.date).substring(1,11)  %></samp>
                    </div>
                </div>
            </div>
         <% }  %>
    </section>